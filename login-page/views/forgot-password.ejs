<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Forgot Password</title>
    <style>
        /* General page styling */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: Arial, sans-serif;
            margin: 0;
            background-image: url('/nature.jpg');
            
            background-size: cover;
    background-repeat: no-repeat;
        }

        /* Card styling */
        .forgot-password-container {
            background-color: #f0faf1;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

        .forgot-password-container h2 {
            color: #33a852;
            margin-bottom: 1rem;
            font-size: 24px;
        }

        /* Input fields styling */
        .forgot-password-container input[type="email"],
        .forgot-password-container input[type="text"],
        .forgot-password-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 0.5rem 0;
            border: 1px solid #d1e7dd;
            border-radius: 8px;
            background-color: #e7f4eb;
            outline: none;
            font-size: 14px;
        }

        /* Button styling */
        .forgot-password-container button {
            width: 100%;
            padding: 10px;
            margin-top: 1rem;
            background-color: #33a852;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
        }

        .forgot-password-container button:hover {
            background-color: #2a8e45;
        }

        /* Message styling */
        #message {
            margin-top: 1rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="forgot-password-container">
        <h2>Forgot Password</h2>
        <form id="forgotPasswordForm">
            <input type="email" id="email" name="email" placeholder="Enter your email" required>
            <button type="button" onclick="submitForgotPassword()">Send Verification Code</button>
        </form>

        <!-- Verification section that appears after sending the code -->
        <div id="verificationSection" style="display: none;">
            <input type="text" id="verificationCode" placeholder="Enter Verification Code" required>
            <input type="password" id="newPassword" placeholder="Enter New Password" required>
            <button type="button" onclick="submitNewPassword()">Reset Password</button>
        </div>

        <div id="message"></div>
    </div>

    <script>
        async function submitForgotPassword() {
            const email = document.getElementById('email').value;
    
            try {
                const response = await fetch('/auth/forgot-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email })
                });
    
                const result = await response.json();
                console.log("Forgot Password Response:", result); // Debugging output
    
                if (response.ok) {
                    document.getElementById('message').textContent = "Verification code sent to your email.";
                    document.getElementById('verificationSection').style.display = 'block'; // Show verification input section
                } else {
                    document.getElementById('message').textContent = result.message || "Error sending verification code.";
                }
            } catch (error) {
                console.error("Error in submitForgotPassword:", error);
                document.getElementById('message').textContent = "An error occurred. Please try again.";
            }
        }
    
        async function submitNewPassword() {
            const email = document.getElementById('email').value;
            const verificationCode = document.getElementById('verificationCode').value;
            const newPassword = document.getElementById('newPassword').value;
    
            try {
                const response = await fetch('/auth/reset-password', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ email, code: verificationCode, newPassword })
                });
    
                const result = await response.json();
                console.log("Reset Password Response:", result); // Debugging output
    
                if (response.ok) {
                    document.getElementById('message').textContent = "Password reset successful! You can now log in.";
                    document.getElementById('verificationSection').style.display = 'none'; // Hide verification section
                } else {
                    document.getElementById('message').textContent = result.message || "Error resetting password.";
                }
            } catch (error) {
                console.error("Error in submitNewPassword:", error);
                document.getElementById('message').textContent = "An error occurred. Please try again.";
            }
        }
    </script>
</body>
</html>
