<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <style>
        /* General page styling */
        body {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            background-color: #f8fdf7;
            font-family: Arial, sans-serif;
            margin: 0;
            background-image: url('/nature.jpg');
            background-size: cover;
    background-repeat: no-repeat;
        }

        /* Card styling */
        .signup-container {
            background-color: #f0faf1;
            padding: 2rem;
            border-radius: 12px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            width: 350px;
            text-align: center;
        }

        .signup-container h2 {
            color: #33a852;
            margin-bottom: 1rem;
            font-size: 24px;
        }

        /* Input fields styling */
        .signup-container input[type="text"],
        .signup-container input[type="email"],
        .signup-container input[type="password"] {
            width: 100%;
            padding: 10px;
            margin: 0.5rem 0;
            border: 1px solid #d1e7dd;
            border-radius: 8px;
            background-color: #e7f4eb;
            outline: none;
            font-size: 14px;
        }

        /* Button styling */
        .signup-container button {
            width: 100%;
            padding: 10px;
            margin-top: 1rem;
            background-color: #33a852;
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
        }

        .signup-container button:hover {
            background-color: #2a8e45;
        }

        /* Link styling */
        .signup-container .link {
            margin-top: 1rem;
            font-size: 14px;
            color: #6c757d;
        }

        .signup-container .link a {
            color: #33a852;
            text-decoration: none;
        }

        .signup-container .link a:hover {
            text-decoration: underline;
        }

        /* Additional verification code section */
        #verificationSection {
            display: none;
            margin-top: 1rem;
        }

        /* Message styling */
        #message {
            margin-top: 1rem;
            color: #6c757d;
        }
    </style>
</head>
<body>
    <div class="signup-container">
        <h2>Sign Up</h2>
        <form id="signupForm">
            <input type="text" id="firstName" name="firstName" placeholder="First Name" required>
            <input type="text" id="middleName" name="middleName" placeholder="Middle Name">
            <input type="text" id="lastName" name="lastName" placeholder="Last Name" required>
            <input type="email" id="email" name="email" placeholder="E-mail" required>
            <input type="password" id="password" name="password" placeholder="Password" required>
            <button type="button" onclick="submitSignup()">Sign Up</button>
        </form>

        <!-- Verification code input will appear here -->
        <div id="verificationSection">
            <input type="text" id="verificationCode" placeholder="Enter Verification Code" required>
            <button type="button" onclick="submitVerification()">Verify</button>
        </div>

        <div id="message"></div>
        <div class="link">Already have an account? <a href="/auth/login">Login</a></div>
    </div>

    <script>
        async function submitSignup() {
            const signupData = {
                firstName: document.getElementById('firstName').value,
                middleName: document.getElementById('middleName').value,
                lastName: document.getElementById('lastName').value,
                email: document.getElementById('email').value,
                password: document.getElementById('password').value
            };

            const response = await fetch('/auth/signup', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify(signupData)
            });

            const result = await response.json();
            if (response.ok) {
                document.getElementById('message').textContent = "Signup successful. Enter the verification code sent to your email.";
                document.getElementById('verificationSection').style.display = 'block';
            } else {
                document.getElementById('message').textContent = result.message || "Signup failed.";
            }
        }

        async function submitVerification() {
            const verificationCode = document.getElementById('verificationCode').value;
            const email = document.getElementById('email').value;

            const response = await fetch('/auth/verify', {
                method: 'POST',
                headers: { 'Content-Type': 'application/json' },
                body: JSON.stringify({ email, code: verificationCode })
            });

            const result = await response.json();
            if (response.ok) {
                document.getElementById('message').textContent = "Verification successful! You can now log in.";
                document.getElementById('verificationSection').style.display = 'none';
            } else {
                document.getElementById('message').textContent = result.message || "Verification failed.";
            }
        }
    </script>
</body>
</html>
